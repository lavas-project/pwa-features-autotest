html
  font-family: "Oswald", "HelveticaNeue-CondensedBold", "Arial Narrow", "Hiragino Sans GB", "Microsoft YaHei",
             "WenQuanYi Micro Hei",  sans-serif
body
    color #333
    padding 0
    margin 0
    .wrapper
        max-width 960px
        margin 0 auto

iframe
    width 50%
    min-width 100px
    height 100px
    margin-bottom 20px
    background rgba(0, 0, 0, 0.5)
    // display none

.top-bar
    width 100%
    height 52px
    line-height 52px
    text-align center
    border-bottom 1px solid #ccc
    font-weight bold
    background #2874f0
    color #fff

.wrapper
    padding 20px
    .top
        width 100%
        display flex
        margin-bottom 10px

        .env
            div
                font-weight bold
                line-height 24px
                span
                    display block
                    font-size 12px

        .score-wrapper
            .title
                line-height 24px
                font-weight bold
                margin 0 auto 5px
                span
                    font-size 16px
            .total-score
                // width 20%
                height 50px
                background #39b54a
                color #fff
                text-align center
                line-height 50px
                font-size 36px
                font-weight bold
                border-radius 5px
                margin 0 auto 10px
            .send-data, .test-again
                // width 20%
                height 36px
                line-height 36px
                background #39b54a
                color #fff
                font-size 16px
                border-radius 3px
                cursor pointer
                margin 0 auto 10px

        .hide
            display none


    .schedule
        margin-bottom 10px
        border-bottom solid 1px #999
        .all-case
            .case-part
                font-size 12px
                display inline-block
                background #fa743e
                color #fff
                border-radius 3px
                text-align center
                .case-name
                    color #fff
                .case-schedule
                    height 20px
                    line-height 20px
                    width 100%
                    // background #fa743e url('https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1508488552618&di=893ce6b1246c6dbb245b57f403ba3f59&imgtype=0&src=http%3A%2F%2Fimage002.server110.com%2F20170516%2F7ea72bdf19b57fcacb8f4ead3e5c84b3.gif') no-repeat center center
                    // background-size 100%

                &.finished
                    background #39b54a
                    .case-schedule
                        height 20px
                        line-height 20px
                        width 100%
                        text-align center
                        background #39b54a
                        // background #39b54a url('https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1508493210792&di=ee1987cc4a680db7cd80f2fb1e098117&imgtype=0&src=http%3A%2F%2Fimglf0.ph.126.net%2Fw7zhaR2_IBP7G01G3eYYjA%3D%3D%2F28710447642466602.png') no-repeat center center
                        // background-size 50%

    .features
        width 100%
        table
            width 100%
            margin 0 auto
            box-sizing: border-box;
            border-collapse: collapse;
            border-spacing: 0;
            table-layout: fixed;
            word-break: break-all;
            border 2px solid #999
            thead
                th
                    padding 10px
                    border solid 2px #999

            tbody
                width 90%
                td
                    padding 5px
                    border 2px solid #999
                .name
                    overflow hidden
                .score
                    text-align center

.send-data-tip
    z-index 10000
    width 200px
    height 40px
    line-height 40px
    text-align center
    border-radius 5px
    background rgb(0, 0, 0, 0.7)
    color #fff
    position fixed
    top 50%
    left 50%
    margin-left -100px


.show-tip
    opacity 0.7

.hide-tip
    opacity 0


.trans-fadeout
    -webkit-transition all 0.5s linear
    -moz-transition all 0.5s linear
    -ms-transition all 0.5s linear
    -o-transition all 0.5s linear
    transition all 0.5s linear

@media screen and (min-width: 500px)
    .schedule
        .all-case
            text-align center
            .case-part
                width 90px
                margin 5px 5px 5px 0
                padding 5px
    .top
        .env
            flex 1
            text-align center

        .score-wrapper
            flex 1
            text-align center

            .title,.total-score,.send-data, .test-again
                width 30%

@media screen and (max-width: 500px)
    .schedule
        .all-case
            text-align left
            .case-part
                width 30%
                margin 0 1% 2% 0
                padding 5px 3px
    .top
        .env
            flex 1
            text-align center

        .score-wrapper
            flex none
            text-align center
            width 84px

            .title
                width 100%
            .total-score
                width 100%
            .send-data, .test-again
                width 100%


